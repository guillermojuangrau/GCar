<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.guillermodejuan.gcar.Main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:background="#222222"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical|center_horizontal"
        android:padding="0dp"
        android:weightSum="100">

        <ImageButton
            android:id="@+id/bluetooth"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:background="#222222"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bt_grey" />

        <ImageButton
            android:id="@+id/gps"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:background="#222222"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gps_grey" />
        <ImageButton
            android:id="@+id/data"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:background="#222222"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/data_grey" />
        <ImageButton
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:background="#222222"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/volume_grey" />

        <ImageButton
            android:id="@+id/callana"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:background="#222222"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/callana_grey" />

        <ImageButton
            android:id="@+id/rotation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:adjustViewBounds="true"
            android:background="#222222"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rotation_grey" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:background="#222222"
            android:maxHeight="@android:dimen/thumbnail_height"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/settings_grey" />



    </LinearLayout>

    <FrameLayout
        android:id="@+id/maincontrols"
        android:layout_below="@id/toolbar"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:weightSum="1.0">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:orientation="horizontal"
               android:layout_weight=".5">

               <ImageButton
                   android:id="@+id/torque"
                   android:layout_width="0dp"
                   android:layout_height="fill_parent"
                   android:layout_weight="20"
                   android:adjustViewBounds="true"
                   android:background="#222222"
                   android:maxHeight="@android:dimen/thumbnail_height"
                   android:paddingHorizontal="0dp"
                   android:paddingVertical="0dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/torque" />

               <ImageButton
                   android:id="@+id/maps"
                   android:layout_width="0dp"
                   android:layout_height="fill_parent"
                   android:layout_weight="20"
                   android:adjustViewBounds="true"
                   android:background="#222222"
                   android:maxHeight="@android:dimen/thumbnail_height"
                   android:paddingHorizontal="0dp"
                   android:paddingVertical="0dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/worldmap" />

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dip"
               android:orientation="horizontal"
               android:layout_weight=".5">

               <ImageButton
                   android:id="@+id/music"
                   android:layout_width="0dp"
                   android:layout_height="fill_parent"
                   android:layout_weight="20"
                   android:adjustViewBounds="true"
                   android:background="#222222"
                   android:maxHeight="@android:dimen/thumbnail_height"
                   android:paddingHorizontal="0dp"
                   android:paddingVertical="0dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/microphone" />

               <ImageButton
                   android:id="@+id/homebutton"
                   android:layout_width="0dp"
                   android:layout_height="fill_parent"
                   android:layout_weight="20"
                   android:adjustViewBounds="true"
                   android:background="#222222"
                   android:maxHeight="@android:dimen/thumbnail_height"
                   android:paddingHorizontal="0dp"
                   android:paddingVertical="0dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/home" />

           </LinearLayout>

       </LinearLayout>

        <ImageButton
            android:id="@+id/gbutton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/centrebuttongreen_round"
            android:background="@null"/>
    </FrameLayout>

    </RelativeLayout>
</FrameLayout>